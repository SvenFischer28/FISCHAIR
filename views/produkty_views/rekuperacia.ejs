<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/links.ejs') %>
    <link rel="stylesheet" href="/css/produkty/rekuperacia.css" />

    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12 col-md-6">
          <img class="top-img" src="<%= rekuperacia.image %>" alt="" />
        </div>

        <div class="table-container col-sm-12 col-md-6">
          <div class="container">
            <div class="row">
              <h1 class="main-title">
                <%= rekuperacia.brand + " " + rekuperacia.name %>
              </h1>
            </div>
            <!-- 1 line -->
            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Výrobca:</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR"><%= rekuperacia.brand %></h3>
              </div>
              <hr />
            </div>

            <!-- 2 line -->

            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Vzduchový výkon:</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR">
                  <%= "Max " + rekuperacia.vykon+ " m³/h" %>
                </h3>
              </div>
              <hr />
            </div>
            <!-- 3 line -->
            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Typ výmennika:</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR"><%= rekuperacia.typVymenika %></h3>
              </div>
              <hr />
            </div>
            <!-- 4 -->

            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Účinnosť:</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR"><%= rekuperacia.ucinnost %></h3>
              </div>
              <hr />
            </div>

            <!-- 5 -->
            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Ventilátory:</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR"><%= rekuperacia.ventilatory %></h3>
              </div>
              <hr />
            </div>
            <!-- 6  -->
            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Príkon (pri 70% vzduchového výkonu):</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR"><%= rekuperacia.prikon %></h3>
              </div>
              <hr />
            </div>

            <!-- 7 -->

            <!-- 8  -->
            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Letný obtok (by-pass):</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR"><%= rekuperacia.byPass %></h3>
              </div>
              <hr />
            </div>
            <!-- 9 -->
            <div class="row">
              <div class="col-sm-12 col-md-6">
                <h4 class="tableL">Rozmery (mm):</h4>
              </div>
              <div class="col-sm-12 col-md-6">
                <h3 class="tableR"><%= rekuperacia.rozmery %></h3>
              </div>
              <hr />
            </div>
            <!-- 10 -->
            <div class="row">
              <h2 class="price"><%= rekuperacia.price + " €" %></h2>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <div class="row text">
        <% for( let i = 0; i < rekuperacia.text.length; i++ ) { %>
        <h6 class="list-title"><%= rekuperacia.text[i][0] %></h6>
        <% for( let x = 1; x < rekuperacia.text[i].length; x++ ) { %>
        <li class="list-item"><%=rekuperacia.text[i][x].substring(1) %></li>
        <% } %> <% } %>
      </div>
    </div>
  </body>
</html>
